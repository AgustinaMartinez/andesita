---
const services = [
  {
    text: "Wi-Fi",
  },
  {
    text: "Cocina equipada",
  },
  {
    text: "TV con cable",
  },
  {
    text: "Ropa blanca",
  },
  {
    text: "Estufa a leña",
  },
  {
    text: "Estacionamiento para vehículos",
  },
  {
    text: "Se aceptan mascotas",
  },
  {
    text: "Caminatas y salidas a caballo",
  },
];
---

<section
  class="px-8 md:px-24 md:py-20 lg:p-20 mb-0 bg-gradient-to-t from-purple-200/50 to-purple-50/5"
>
  <div class="flex flex-col lg:flex-row items-center justify-around">
    <div class="w-full lg:w-1/2 lg:pr-8">
      <h1 id="services" class="custom-title">Servicios</h1>
      <ul
        class="mt-4 md:grid md:grid-cols-2 md:gap-x-10 md:gap-y-2 lg:grid lg:grid-cols-2 lg:gap-x-10 lg:gap-y-2"
      >
        {
          services.map((service) => (
            <li class="mt-1 custom-text flex gap-2 items-center">
              <i
                class="fa fa-check-circle text-violet-600"
                aria-hidden="true"
              />
              <span>{service.text}</span>
            </li>
          ))
        }
      </ul>
    </div>
    <div
      class="flex flex-col items-center w-5/6 md:w-full lg:w-1/2 mt-14 lg:mt-0 lg:ml-auto group"
    >
      <a
        class="relative w-full max-w-sm md:max-w-md lg:max-w-lg mb-6 cursor-pointer"
        href="/galeria"
      >
        <img
          src="/images/landscapes/calle_las_pampas.webp"
          alt="Calles de Las Pampas"
          class="w-full md:w-3/4 aspect-[4/3] object-cover rounded-lg custom-shadow absolute top-0 left-1 rotate-[-5deg] z-20 group-hover:-translate-x-5 group-hover:rotate-[-7deg] duration-300 ease-out"
        />
        <img
          src="/images/landscapes/atardecer.webp"
          alt="Atardecer en Las Pampas"
          class="w-full md:w-3/4 aspect-[4/3] object-cover rounded-lg custom-shadow absolute z-10 mt-0 ml-6 md:ml-40 lg:ml-40 rotate-[5deg] group-hover:translate-x-5 group-hover:rotate-[7deg] duration-300 ease-out"
        />
        <img
          src="/images/landscapes/rio_1.webp"
          alt="Río Pampa cerca de Cabaña Andesita para pescar"
          class="w-full md:w-3/4 aspect-[4/3] object-cover rounded-lg custom-shadow relative z-0 top-[-30px] ml-4 md:ml-20 lg:ml-20 rotate-[-4deg] group-hover:rotate-[-2deg] duration-300 ease-out"
        />
      </a>
      <a
        href="/galeria"
        class="custom-button custom-shadow cursor-pointer mb-6 md:mb-0 lg:mb-0 z-30"
      >
        <span class="uppercase text-nowrap">Mirá más fotos</span>
      </a>
    </div>
  </div>
</section>
