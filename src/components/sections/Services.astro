---
import CheckIcon from "~/assets/CheckIcon.astro";

const services = [
  {
    text: "Wi-Fi",
  },
  {
    text: "Cocina equipada",
  },
  {
    text: "Cable",
  },
  {
    text: "Ropa blanca",
  },
  {
    text: "Estufa a leña",
  },
  {
    text: "Vistas exclusivas a la cordillera",
  },
  {
    text: "Se aceptan mascotas",
  },
  {
    text: "Caminatas y salidas a caballo",
  },
];
---

<section
  class="px-8 md:px-24 md:py-20 lg:p-20 mb-0 bg-gradient-to-t from-purple-200/50 to-purple-50/5"
>
  <div class="flex flex-col lg:flex-row items-center justify-around">
    <div class="w-full lg:w-1/2 lg:pr-8">
      <h1 id="services" class="custom-title">Servicios</h1>
      <ul
        class="mt-4 md:grid md:grid-cols-2 md:gap-x-10 md:gap-y-2 lg:grid lg:grid-cols-2 lg:gap-x-10 lg:gap-y-2"
      >
        {
          services.map((service) => (
            <li class="mt-1 custom-text flex gap-2">
              <CheckIcon />
              <span>{service.text}</span>
            </li>
          ))
        }
      </ul>
    </div>
    <div
      class="flex flex-col items-center w-5/6 md:w-full lg:w-1/2 mt-14 lg:mt-0 lg:ml-auto"
    >
      <div class="relative w-full max-w-sm md:max-w-md lg:max-w-lg mb-6">
        <img
          src="/images/foto_1.webp"
          alt="Cabaña Andesita en Las Pampas"
          class="w-full md:w-3/4 aspect-[4/3] object-cover rounded-lg custom-shadow absolute top-0 left-1 rotate-[-5deg] z-10 transform -translate-y-4 -translate-x-4"
        />
        <img
          src="/paisaje.webp"
          alt="Río Pampa cerca de Cabaña Andesita para pesca con mosca"
          class="w-full md:w-3/4 aspect-[4/3] object-cover rounded-lg custom-shadow relative z-0 mt-8 ml-6 md:ml-40 lg:ml-40"
        />
      </div>
      <a
        href="/galeria"
        class="custom-button custom-shadow cursor-pointer mb-6 md:mb-0 lg:mb-0"
      >
        <span class="uppercase text-nowrap">Ver cabaña por dentro</span>
      </a>
    </div>
  </div>
</section>
