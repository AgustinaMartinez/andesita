---
import { SEO } from "astro-seo";
import { ClientRouter } from "astro:transitions";
import "@styles/global.css";

interface Props {
  className?: string;
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  site?: string;
  alt?: string;
}

const {
  className = "",
  title = "Cabaña Andesita | Alojamiento en Las Pampas, Chubut",
  description = "Cabaña Andesita en Las Pampas, Chubut: el lugar ideal para disfrutar en familia. Río, naturaleza y descanso en la Patagonia. ¡Reservá ahora!",
  canonical = "https://www.andesita.com.ar",
  ogImage = "/images/landscapes/calle_las_pampas.webp",
  site = "https://www.andesita.com.ar",
  alt = "Cabaña Andesita en Las Pampas, Chubut",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="keywords"
      content="cabaña, Andesita, Las Pampas, Chubut, Patagonia, hospedaje, alojamiento, naturaleza, montaña, descanso, vacaciones, Dr. Atilio Viglione, Atilio Vilione, hospedaje en Las Pampas, cabaña en Patagonia, vacaciones en Chubut, Andesita Cabaña, Andesita Patagonia, Andesita Las Pampas, hospedaje en Chubut, cabañas en Chubut, alquilar cabaña"
    />
    <meta name="author" content="Agustín Ledesma" />
    <link rel="icon" type="image/png" href="/logo_favicon.png" />
    <link
      rel="preload"
      as="image"
      href="/images/landscapes/cordilleras_1.webp"
      type="image/avif"
      fetchpriority="high"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={title}
      description={description}
      canonical={canonical}
      noindex={false}
      nofollow={false}
      openGraph={{
        basic: {
          title,
          type: "website",
          image: ogImage,
          url: canonical,
        },
        image: {
          alt,
          width: 1200,
          height: 630,
          url: ogImage,
        },
        optional: {
          siteName: "Cabaña Andesita",
          locale: "es_AR",
          description,
        },
      }}
      twitter={{
        card: "summary_large_image",
        title,
        description,
        image: ogImage,
        imageAlt: alt,
        site,
        creator: "Cabaña Andesita",
      }}
      extend={{
        link: [{ rel: "icon", href: "/logo_favicon.png" }],
      }}
    />
    <ClientRouter />
    <script type="module" src="/scripts/init.js"></script>
  </head>
  <body class={`min-h-screen flex flex-col ${className || ""}`}>
    <slot />
  </body>
</html>
