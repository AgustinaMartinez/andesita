---
import { SEO } from "astro-seo";
import { ClientRouter } from "astro:transitions";
import "@styles/global.css";

interface Props {
  className?: string;
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  site?: string;
}

const {
  className = "",
  title = "Cabaña Andesita | Alojamiento en Las Pampas, Chubut",
  description = "Cabaña Andesita en Las Pampas, Chubut: el lugar ideal para disfrutar en familia. Río, naturaleza y descanso en la Patagonia. ¡Reservá ahora!",
  canonical = "https://www.andesita.com.ar",
  ogImage = "/paisaje6.webp",
  site = "https://www.andesita.com.ar",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={title}
      description={description}
      canonical={canonical}
      openGraph={{
        basic: {
          title,
          type: "website",
          image: ogImage,
          url: canonical,
        },
        image: {
          alt: "Vista de Cabaña Andesita en Las Pampas, Chubut",
        },
      }}
      twitter={{
        card: "summary_large_image",
        title,
        description,
        image: ogImage,
        imageAlt: "Vista de Cabaña Andesita en Patagonia",
        site,
      }}
      extend={{
        link: [{ rel: "icon", href: "/favicon.ico" }],
      }}
    />
    <ClientRouter />
  </head>
  <body class={`min-h-screen flex flex-col ${className || ""}`}>
    <slot />
  </body>
</html>
