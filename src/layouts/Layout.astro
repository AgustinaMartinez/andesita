---
import { SEO } from "astro-seo";
import { ClientRouter } from "astro:transitions";
import "@styles/global.css";

interface Props {
  className?: string;
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  site?: string;
}

const {
  className = "",
  title = "Cabaña Andesita | Alojamiento en Las Pampas, Chubut",
  description = "Descubrí Cabaña Andesita, tu refugio ideal en Las Pampas, Chubut. Alojamiento con vistas al río, ideal para pesca, aventura y relax en la Patagonia.",
  canonical = "https://www.andesita.com.ar",
  ogImage = "/paisaje6.webp",
  site = "https://www.andesita.com.ar",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={title}
      description={description}
      canonical={canonical}
      openGraph={{
        basic: {
          title,
          type: "website",
          image: ogImage,
          url: canonical,
        },
        image: {
          alt: "Cabaña Andesita en Las Pampas, Chubut",
        },
      }}
      twitter={{
        card: "summary_large_image",
        title,
        description,
        image: ogImage,
        imageAlt: "Cabaña Las pampas",
        site,
      }}
      extend={{
        link: [{ rel: "icon", href: "/favicon.ico" }],
      }}
    />
    <ClientRouter />
  </head>
  <body class={`min-h-screen flex flex-col ${className || ""}`}>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    scroll-behavior: smooth;
  }
</style>
